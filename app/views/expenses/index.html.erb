<% if notice %>
  <div class="row center notice green lighten-2">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>
<div class="container">
  <h4>Minhas Despesas</h4>
    <% if @expenses.empty? %>
      <div class="divider"></div>
      <div class="section">
        <h6 class="no-expenses">Nenhuma despesa cadastrada</h6>
      </div>
    <% else %>
      <% @expenses.each do |expense| %>
        <div class="divider"></div>
        <div class="row">
          <div class='col s12 m4 l2 center'>
            <% if expense.voucher.attached? %>
              <%= image_tag url_for(expense.voucher), :size => "100x100" %>
            <% else %>
              <img src="<%= asset_path('no-image.png') %>" width="100" height="100">
            <% end %>
          </div>
          <div class='col s12 m4 l8'>
            <h6><b><%= expense.value %> - <%= expense.date.strftime("%d/%m/%Y") %></b></h6>
            <h6><%= expense.description %></h6>
          </div>
          <div class='col s12 m2 l2 center'>
            <div class="expense-status"><i class="material-icons">access_time</i></div>
          </div>
        </div>
      <% end %>
    <% end %>

  <br>
  <%= link_to '<i class="material-icons">add</i>'.html_safe, new_expense_path, class: 'btn-floating btn-large waves-effect waves-light grey fixed-button' %>
</div>
